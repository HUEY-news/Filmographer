<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.details.AboutFragment"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_error_message"
            style="@style/LabelTextStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:textAlignment="center"
            tools:text="ERROR MESSAGE" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_view_movie_title"
                style="@style/TitleTextStyle"
                android:layout_marginBottom="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="TITLE" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/text_view_rating_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Рейтинг:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_movie_title" />

            <TextView
                android:id="@+id/text_view_rating_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_rating_label" />

            <TextView
                android:id="@+id/text_view_year_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Год:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_rating_value" />

            <TextView
                android:id="@+id/text_view_year_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_year_label" />

            <TextView
                android:id="@+id/text_view_country_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Страна:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_year_value" />

            <TextView
                android:id="@+id/text_view_country_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_country_label" />

            <TextView
                android:id="@+id/text_view_genre_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Жанр:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_country_value" />

            <TextView
                android:id="@+id/text_view_genre_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_genre_label" />

            <TextView
                android:id="@+id/text_view_director_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Режиссёр:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_genre_value" />

            <TextView
                android:id="@+id/text_view_director_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_director_label" />

            <TextView
                android:id="@+id/text_view_writer_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="Сценарист:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_director_value" />

            <TextView
                android:id="@+id/text_view_writer_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_writer_label" />

            <TextView
                android:id="@+id/text_view_cast_label"
                style="@style/LabelTextStyle"
                android:layout_marginTop="8dp"
                android:text="В ролях:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_writer_value" />

            <TextView
                android:id="@+id/text_view_cast_value"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_cast_label" />

            <TextView
                android:id="@+id/text_view_plot_title"
                style="@style/TitleTextStyle"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Сюжет:"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_cast_value" />

            <TextView
                android:id="@+id/text_view_plot"
                style="@style/ValueTextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_plot_title" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ПОКАЗАТЬ АКТЁРСКИЙ СОСТАВ"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_plot" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</ScrollView>