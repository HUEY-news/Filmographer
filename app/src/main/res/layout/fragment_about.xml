<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_error_message"
            style="@style/LabelTextStyle"
            android:layout_margin="24dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            tools:text="ERROR MESSAGE" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_view_title"
                style="@style/TitleTextStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="16dp"
                tools:text="TITLE"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/text_view_rating_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Рейтинг:"/>

            <TextView
                android:id="@+id/text_view_rating_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_rating_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text_view_year_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_rating_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Год:"/>

            <TextView
                android:id="@+id/text_view_year_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_year_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text_view_country_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_year_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Страна:"/>

            <TextView
                android:id="@+id/text_view_country_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_country_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text_view_genre_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_country_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Жанр:"/>

            <TextView
                android:id="@+id/text_view_genre_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_genre_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/text_view_director_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_genre_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Режиссёр:"/>

            <TextView
                android:id="@+id/text_view_director_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_director_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text_view_writer_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_director_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Сценарист:"/>

            <TextView
                android:id="@+id/text_view_writer_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_writer_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/text_view_cast_label"
                style="@style/LabelTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_writer_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="В ролях:"/>

            <TextView
                android:id="@+id/text_view_cast_value"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toTopOf="@id/text_view_cast_label"
                app:layout_constraintLeft_toLeftOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/text_view_plot_title"
                style="@style/TitleTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_cast_value"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:textSize="24sp"
                android:text="Сюжет:"/>

            <TextView
                android:id="@+id/text_view_plot"
                style="@style/ValueTextStyle"
                app:layout_constraintTop_toBottomOf="@id/text_view_plot_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</ScrollView>